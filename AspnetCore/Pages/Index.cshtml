    <div class="mt-3">
       <button id="btnRespond" onclick="showRespond()" class="btn btn-gradient w-100">Respond</button>
    </div>



    </div>
 
 
 
   <div class="container">
    <div class="modal fade" tabindex="-1" id="loginModal" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-gradient-blue">


                     <h4 class="modal-title" >Share document for review</h4>
                    <button type="button" class="close" id="btndismissmodal" data-dismiss="modal" style="border:none;background:none;font-size:25px;color:#ffffff;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                   
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row">
                            <div class="col-3">
                                <div class="d-flex align-items-center" style="min-height:100px;">
                                    <div class="box w-100 text-center">

                                        
                                <button id ="btnreview" onclick="sendmail()" type="button" class="btn btn-primary btn-gradient">Send For Review</button>

                                    </div>
                                </div>


                            </div>
                            <div class="col-9">
                                <div class="form-group">
                            <label id="lbltxtTo">To</label>
                            <input type="text" class="form-control" placeholder="Please enter email address" id="txtTo"></input>
                        </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                            <label id="lbltxtmessage">Message</label>
                            <textarea rows="4" class="form-control" placeholder="Please enter message"
                                   id="txtmessage"></textarea>
                        </div>

                            </div>
                        </div>
                        
                    </form>
                </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>
    
   <div class="modal fade" tabindex="-1" id="RespondModal" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <p>Would you like to approve the document without any changes?</p>
            </div>
            <div class="modal-footer">
                <button id="ok" type="button" onclick="responduser()" class="btn btn-primary btn-gradient">Approve without change</button>
                <button id="cancel" type="button" class="btn btn-default bg-gray">
                    Cancel
                </button>
            </div>

        </div>
    </div>
</div>
